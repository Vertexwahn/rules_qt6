module(
    name = "rules_qt",
    version = "1.0.0",
    compatibility_level = 1,
)

bazel_dep(name = "bazel_skylib", version = "1.7.1")
bazel_dep(name = "platforms", version = "0.0.10")

qt = use_extension("@rules_qt//:extensions.bzl", "qt")
qt.fetch()
use_repo(
    qt,
    "qt_linux_x86_64",
    "qt_windows_x86_64",
    "qt_mac_aarch64",
)
register_toolchains(
    "@rules_qt//tools:all",
    dev_dependency = True,
)
